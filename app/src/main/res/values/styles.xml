<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotoBold" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="RobotoRegular" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Button_Roboto_14">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="ButtonRounded" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dimen_8</item>
    </style>

    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/Button_Roboto_14</item>
        <item name="backgroundTint">@android:color/holo_red_dark</item>
        <item name="shapeAppearance">@style/ButtonRounded</item>
        <item name="android:insetTop">@dimen/dimen_0</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:insetBottom">@dimen/dimen_0</item>
        <item name="android:insetRight">@dimen/dimen_0</item>
        <item name="android:insetLeft">@dimen/dimen_0</item>
        <item name="minHeight">@dimen/dimen_48</item>
    </style>

</resources>